<div class="container">
  <div class="center">
    {{!-- <img src="/assets/img/burger.jpg" height="200"> --}}
  </div>
  <h1>Eat-Da-Burger</h1>

  {{#if error}}
  <div>{{error}}</div>
  {{/if}}

  <div class="row center">
    <div class="col-md-6">
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <div class="row">
          <div class="col-md-9">
            <p class="uneaten center">{{this.id}}. {{this.burger_name}}</p>
          </div>
          <div class="col-md-3">
            <button data-id={{this.id}} class="devour btn center-block"> Devour it! </button>
          </div>
        </div>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-4">
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <p class="eaten center">{{this.id}}. {{this.burger_name}}</p>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <form class="create-form center">

        <div class="form-group">
          <input type="text" id="burgerName" name="name" class="center-block burger_field">
        </div>

        <button type="submit" id="addBurger" class="btn-primary">Submit</button>
        <h5>Enter a burger you want to eat Click the "Submit" button.</h5>
      </form>

    </div>
  </div>

</div>